		</repository> <repository> <id>Personal</id> <url>https://github.com/smurfdad/maven-repository/raw/master</url> 
		</repository> <repository> <id>codelds</id> <url>https://code.lds.org/nexus/content/groups/main-repo</url> 
		</repository> <repository> <id>jasper-reports</id> <url>http://jaspersoft.artifactoryonline.com/jaspersoft/third-party-ce-artifacts/</url> 
		</repository> -->
	</repositories>

</project>